---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { title, href, text,  ...props } = Astro.props;
const { pathname } = Astro.url;
const isActive = href === pathname;
---
<a href={href}
    class = {`hover:underline underline-offset-3px ${isActive ? 'font-bold underline' : 'font-medium'}`}
    {...props}>
    {title}
</a>