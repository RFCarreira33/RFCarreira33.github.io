---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
const projects = await Astro.glob("./projects/*.md");
---

<Layout content={{title:"Projects"}}>
	<main>
		<h1>All the projects I worked on</h1>
		<br>
		<section class="list-none space-y-5">
		{projects.map((proj) => (
			<Card
				title = {proj.frontmatter.title}
				body = {proj.frontmatter.description}
				language={proj.frontmatter.language}
				href = {`projects/${proj.frontmatter.filename}`}
			/>
	  ))}
	  	</section>
	</main>
</Layout>
